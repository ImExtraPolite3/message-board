<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <% messages.forEach(message => { %>
    <ul>
      <li><%= message.text %></li>
      <li><%= message.user %></li>
      <li><%= message.added %></li>
    </ul>
    <a href="/details/<%= message.id %>">Details</a>
    <% }) %>

    <a href="/new">Add Message</a>
  </body>
</html>
